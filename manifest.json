{
    "name": "WPEngine Helper",
    "version": "1.0.0",
    "description": "Adds some extra functionality to the WPEngine Dashboard",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 2,
    "author": "Chris Bellew",
    // "action": {
    //     "default_title": "WPEngine Helper"
    // },
    "permissions": [
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "atomjack@gmail.com",
            "strict_min_version": "42.0"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://my.wpengine.com/*"
            ],
            "css": [
                "dist/wpengine.css"
            ],
            "js": [
                "dist/wpengine.js"
            ]
        }
    ]
}